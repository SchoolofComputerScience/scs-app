{
  "name": "scs-app",
  "description": "CMU:SCS Main Application",
  "author": "seckel@scs.cmu.edu",
  "version": "1.0.0",
  "repository": "https://github.com/SchoolofComputerScience/scs-app",
  "engines": {
    "node": "8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "dev": "npm-run-all --parallel dev:server dev:front dev:nodemon",
    "dev:nodemon": "nodemon server.js --ignore src --ignore dist --ignore build",
    "dev:front": "webpack --config build/webpack.client.config.js --progress --hide-modules --watch",
    "dev:server": "webpack --config build/webpack.server.config.js --progress --hide-modules --watch",
    "build": "cross-env NODE_ENV=development npm run build:client && cross-env NODE_ENV=development npm run build:server",
    "build:prod": "cross-env NODE_ENV=production npm run build:client && cross-env NODE_ENV=production npm run build:server",
    "build:client": "webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "webpack --config build/webpack.server.config.js --progress --hide-modules"
  },
  "dependencies": {
    "apollo-client": "^1.4.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "es6-promise": "^4.1.0",
    "express": "^4.15.3",
    "graphql-tag": "^2.2.1",
    "helmet": "^3.6.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.4",
    "lru-cache": "^4.0.2",
    "marked": "^0.3.6",
    "mongoose": "^4.10.4",
    "prismic.io": "^3.5.6",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.4.3",
    "vue": "^2.3.3",
    "vue-analytics": "^4.1.2",
    "vue-moment": "^2.0.2",
    "vue-multiselect": "^2.0.0-beta.13",
    "vue-observe-visibility": "^0.1.3",
    "vue-resize": "^0.1.3",
    "vue-router": "^2.5.3",
    "vue-server-renderer": "^2.3.3",
    "vuex": "^2.3.1",
    "vuex-router-sync": "^4.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "browser-sync": "^2.18.12",
    "browser-sync-webpack-plugin": "^1.1.4",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.5.8",
    "vue-loader": "^12.2.1",
    "vue-template-compiler": "^2.3.3",
    "webpack": "2.6.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  }
}
